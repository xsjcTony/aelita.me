---
import '@styles/index.scss'
// import AuroraBg from '@components/AuroraBg.astro'
import DarkModeToggler from '@components/DarkModeToggler.astro'
import { Content, frontmatter } from '@pages/_index.md'
---


<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <meta content="width=device-width" name="viewport" />
    <meta content={Astro.generator} name="generator" />
    <title>Astro</title>
    <script id="check-dark-mode">
      (() => {
        const e=localStorage.getItem('theme-appearance')||'auto',a=window.matchMedia('(prefers-color-scheme: dark)').matches;(!e||e === 'auto'?a:e==='dark')&&document.documentElement.classList.add('dark')
      })();
    </script>
  </head>
  <body>
    <!-- <AuroraBg> -->
    <DarkModeToggler />
    {frontmatter.title}
    <Content />
    <footer>Built with <code>{Astro.generator}</code></footer>
    <!-- </AuroraBg> -->
  </body>
</html>
